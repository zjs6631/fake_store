extends layout 

block content
    div(class='itemFormPageContainer')
        h1(class='formHeader') #{title}


        form(method='POST' action='' class='itemForm')
        
            div(class='field')
                label(for='name') Item Name:
                input#name.form-control(type='text', placeholder='example title' name='name' value=(undefined===item ? '' : item.name)) 
            
            div(class='field')
                label(for='description') Description: 
                input#description.form-control(type='text', placeholder='example description' name='description' value=(undefined===item ? '' : item.description)) 
            
            div(class='field')
                for category in categories
                    div(class='categoryBox')
                        input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked)
                        label(for=category._id) #{category.name}
            
            div(class='field')
                label(for='price') Item Price:
                input#price.form-control(type='text', placeholder='50.00' name='price' value=(undefined===item ? '' : item.price)) 
            
            div(class='field')
                label(for='number_in_stock') Number in stock:
                input#name.form-control(type='text', placeholder='5' name='number_in_stock' value=(undefined===item ? '' : item.number_in_stock)) 
            
            div(class='field')    
                button.btn.btn-primary(type='submit' class='itemFormBtn') Submit    
        if errors
        ul(class='errorList')
            for error in errors
                li!= error.msg