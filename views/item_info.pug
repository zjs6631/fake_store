extends layout

block content
    div(class='anotherContainer')
        div(class='singleItemContainer')
            div(class='itemName')
                h1= title
            div(class='itemPic')
                p img
            div(class='itemDescription')
                p= item_info.name
                p= item_info.description
                p= item_info.category.name
                p= item_info.category.description
    
            div(class='itemPrice')
                p= "$"+(item_info.price).toFixed(2)
                p= "In stock: " + item_info.number_in_stock
                button(class='button') Add to cart 
    
    